---
import MainLayout from '@/layouts/MainLayout.astro';
import ErrorImg from '../assets/404.png';
import { Image } from 'astro:assets';
---

<MainLayout title="Page not found">
  <div class="container">
    <div class="flex h-full items-center justify-center pt-16 text-center">
      <div class="mb-8">
        <Image
          src={ErrorImg}
          class="mx-auto mb-4 size-[400px]"
          alt="Error Images"
        />
        <a
          class="inline-block rounded-full bg-primary px-4 py-2 text-center text-400 font-500"
          href="/">Go to Homepage</a
        >
      </div>
    </div>
  </div>
</MainLayout>
